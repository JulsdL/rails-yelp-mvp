<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="my-4">Restaurants</h1>
      <ul class="list-group">
        <% @restaurants.each do |restaurant| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to restaurant.name, restaurant_path(restaurant) %>
            <%= link_to "Delete", restaurant_path(restaurant),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>
</div>
